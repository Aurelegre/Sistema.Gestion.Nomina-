@using Sistema.Gestion.Nómina.DTOs.Departamentos
@model PaginatedResult<GetDepartamentosResponse>

@{
    ViewData["Title"] = "Roles";
}

<partial name="Messages" />


<div class="d-flex justify-content-between align-items-center">
    <h1 class="my-3">Departamentos</h1>
    <button type="button" class="btn btn-primary" onclick="fetchDepto(0)">
        <i class="bi bi-plus-circle-fill" style="font-size: 20px"></i>&emsp;Crear Departamento
    </button>
</div>

<!-- Filtros de Búsqueda -->
<form method="get" asp-controller="Departamento" asp-action="Index" class="mb-4">
    <div class="row">
        <div class="col-md-4">
            <label for="Descripcion">Nombre</label>
            <input type="text" class="form-control" id="Descripcion" name="Descripcion" value="@ViewBag.Descripcion" placeholder="Filtrar por Nombre">
        </div>
        <div class="col-md-4">
            <label for="Jefe">Jefe</label>
            <input type="text" class="form-control" id="Jefe" name="jefe" value="@ViewBag.Jefe" placeholder="Filtrar por Jefe">
        </div>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Buscar</button>
        <a method="get" asp-controller="Departamento" asp-action="Index" class="btn btn-secondary">Limpiar</a>
    </div>

</form>


@if (Model.Items.Any())
{
    <div class="table-responsive">
        <table class="table table-bordered table-striped" style="overflow : visible; position:relative">
            <thead class="thead-dark">
                <tr>
                    <td>No.</td>
                    <td>Nombre</td>
                    <td>Jefe</td>
                    <td>Acciones</td>
                </tr>
            </thead>
            <tbody>
                @{
                    int counter = 1; // Inicializa el contador
                }
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@counter</td> <!-- Muestra el número secuencial -->
                        <td>@item.Descripcion</td>
                        @if (string.IsNullOrEmpty(item.Jefe))
                        {
                            <td><label class="alert-warning" style="padding:2px"><strong>Sin asignar</strong></label></td>
                        }else{
                            <td>@item.Jefe</td>
                        }
                        <td>
                            <select class="form-select form-select-sm actions-dropdown" id="selectId">
                                <option selected>Seleccionar</option>
                                <option value="editar" data-id="@item.Id"> Editar</option>
                                <option value="eliminar" data-id="@item.Id">Eliminar</option>
                                <option value="detalle" data-id="@item.Id">Ver detalle</option>
                            </select>
                        </td>
                    </tr>

                    counter++; // Incrementa el contador

                }

            </tbody>
        </table>
    </div>

    <!-- Paginación -->
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", new GetDepartamentosDTO { page = i, Descripcion = ViewBag.Descripcion,jefe = ViewBag.Jefe })">
                        @i
                    </a>
                </li>
            }
        </ul>
    </nav>

}
else
{
    <p>No hay roles disponibles.</p>
}

<partial name="Edit" />
<partial name="Delete" />
<partial name="Create" /> 
<partial name="Details"/>   


<script src="/js/Departamentos.js" asp-append-version="true"></script>
