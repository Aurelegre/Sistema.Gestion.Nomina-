@using Sistema.Gestion.Nómina.DTOs.Empresa
@model PaginatedResult<GetEmpresasResponce>

@{
    ViewData["Title"] = "Empresas";
}

<partial name="Messages" />


<div class="d-flex justify-content-between align-items-center">
    <h1 class="my-3">Empresas</h1>
    <button type="button" class="btn btn-primary" onclick="createEmpresa()">
        Crear Empresa
    </button>
</div>

<!-- Filtros de Búsqueda -->
<!-- Filtros de Búsqueda -->
<form method="get" asp-controller="Empresa" asp-action="Index" class="mb-4">
    <div class="row">
        <div class="col-md-3">
            <label for="Nombre">Nombre</label>
            <input type="text" class="form-control" id="Nombre" name="Nombre" value="@ViewBag.Nombre" placeholder="Filtrar por Nombre">
        </div>
        <div class="col-md-3">
            <label for="Puesto">Puesto</label>
            <input type="text" class="form-control" id="Telefono" name="Telefono" value="@ViewBag.Telefono" placeholder="Filtrar por Teléfono">
        </div>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Buscar</button>
        <a method="get" asp-controller="Empresa" asp-action="Index" class="btn btn-secondary">Limpiar</a>
    </div>
</form>


@if (Model.Items.Any())
{
    <div class="table-responsive">
        <table class="table table-bordered table-striped" style="overflow : visible; position:relative">
            <thead class="thead-dark">
                <tr>
                    <td>No.</td>
                    <td>Nombre</td>
                    <td>Dirección</td>
                    <td>Teléfono</td>
                    <td>Acciones</td>
                    
                </tr>
            </thead>
            <tbody>
                @{
                    int counter = 1; // Inicializa el contador
                }
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@counter</td> <!-- Muestra el número secuencial -->
                        <td>@item.Nombre</td>
                        <td>@item.Direccion</td>
                        <td>@item.Telefono</td>

                        <td>
                            <select class="form-select form-select-sm actions-dropdown">
                                <option selected>Seleccionar</option>
                                <option value="editar" data-id="@item.Id"> Editar</option>
                                <option value="eliminar" data-id="@item.Id">Eliminar</option>
                                <option value="detalle" data-id="@item.Id">Ver Detalle</option>
                            </select>
                        </td>
                    </tr>

                    counter++; // Incrementa el contador

                }

            </tbody>
        </table>
    </div>

    <!-- Paginación -->
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", new GetEmpresasDTO { page = i, Telefono = ViewBag.Telefono, Nombre = ViewBag.Nombre})">
                        @i
                    </a>
                </li>
            }
        </ul>
    </nav>

}
else
{
    <p>No hay Empresas disponibles.</p>
}

