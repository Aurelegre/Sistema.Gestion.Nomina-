<!-- Modal de Confirmación de Activación -->
<div class="modal fade" id="enableConfirmationModal" tabindex="-1" aria-labelledby="enableConfirmationModal" aria-hidden="true">
    <div class="modal-dialog ">
        <div class="modal-content ">
            <div class="modal-header">
                <h5 class="modal-title" id="enableConfirmationModal">Confirmar Activación</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body alert alert-warning">
                <strong>¿Está seguro activar esta Empresa?</strong>
            </div>
            <div class="modal-footer ">
                <form asp-controller="Empresa" asp-action="Enable">
                    <input type="hidden" id="enableId" name="Id" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" id="confirmEditBtn" class="btn btn-warning">Activar</button>
                </form>
            </div>
        </div>
    </div>
</div>
