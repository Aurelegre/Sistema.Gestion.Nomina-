@using Sistema.Gestion.Nómina.DTOs.Roles
@model PaginatedResult<GetRolesResponse>

@{
    ViewData["Title"] = "Roles";
}

<partial name="Messages" />


<div class="d-flex justify-content-between align-items-center">
    <h1 class="my-3">Roles</h1>
    <button type="button" class="btn btn-primary" onclick="fetchRoleData(0)">
        <i class="bi bi-plus-circle-fill" style="font-size: 20px"></i>&emsp;Crear Rol
    </button>
</div>

<!-- Filtros de Búsqueda -->
<!-- Filtros de Búsqueda -->
<form method="get" asp-controller="Rol" asp-action="Index" class="mb-4">
    <div class="row">
        <div class="col-md-4">
            <label for="Descripcion">Nombre</label>
            <input type="text" class="form-control" id="Descripcion" name="Descripcion" value="@ViewBag.Descripcion" placeholder="Filtrar por Nombre">
        </div>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Buscar</button>
        <a method="get" asp-controller="Rol" asp-action="Index" class="btn btn-secondary">Limpiar</a>
    </div>
    
</form>


@if (Model.Items.Any())
{
    <div class="table-responsive">
        <table class="table table-bordered table-striped" style="overflow : visible; position:relative">
            <thead class="thead-dark">
                <tr>
                    <td>No.</td>
                    <td>Nombre</td>
                    <td>Acciones</td>
                </tr>
            </thead>
            <tbody>
                @{
                    int counter = 1; // Inicializa el contador
                }
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@counter</td> <!-- Muestra el número secuencial -->
                        <td>@item.Descripcion</td>
                        <td>
                            <select class="form-select form-select-sm actions-dropdown" id="selectId">
                                <option selected>Seleccionar</option>
                                <option value="editar" data-id="@item.Id"> Editar</option>
                                <option value="eliminar" data-id="@item.Id">Eliminar</option>
                                <option value="permisos" data-id="@item.Id">Permisos</option>
                            </select>
                        </td>
                    </tr>

                    counter++; // Incrementa el contador

                }

            </tbody>
        </table>
    </div>

    <!-- Paginación -->
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = i, DPI = ViewBag.Descripcion })">
                        @i
                    </a>
                </li>
            }
        </ul>
    </nav>

}
else
{
    <p>No hay roles disponibles.</p>
}

<partial name="Edit" />
<partial name="Delete" />
<partial name="Create" />


<script src="/js/Roles.js" asp-append-version="true"></script>
