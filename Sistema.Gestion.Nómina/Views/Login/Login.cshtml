@model LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}


<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Página de Login</title>
    <link rel="stylesheet" href="~/css/LoginStyles.css">
</head>
<body>
    <partial name="Messages" />
    <div class="login-container">
        <div class="login-box">
            <h2>Iniciar Sesión</h2>
            <form asp-controller="Login" asp-action="Login" method="POST">
                <div class="input-group">
                    <label for="user">Usuario</label>
                    <input type="text" id="user" name="user" asp-for="user" oninput="this.value = this.value.toUpperCase()" placeholder="correo@ejemplo.com" maxlength="100" minlength="5" autocomplete="email" required title="Colocar usuario">
                </div>
                <div class="input-group">
                    <label for="password">Contraseña</label>
                    <input type="password" id="password" name="password" asp-for="password" required  title="Colocar contraseña">
                </div>
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger" style="margin-bottom:10px">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <p style="color:red; font-size:15px; font: bold">@error.ErrorMessage</p>
                        }
                    </div>
                }
                <div class="input-group">
                    <button type="submit">Ingresar</button>
                </div>
                <div class="extra-options">
                    <a asp-controller="UnAuthenticate" asp-action="ForgotPassword">¿Olvidaste tu contraseña?</a>
                    <a asp-controller="UnAuthenticate" asp-action="FirstSession">Primer Inicio de Sesión</a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>