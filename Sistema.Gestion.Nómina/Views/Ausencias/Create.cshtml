<!-- Modal para crear un empleado -->
<div class="modal fade" id="createAusenciaModal" tabindex="-1" aria-labelledby="createAusenciaModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <!-- Aumenté el tamaño del modal -->
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createAusenciaModalLabel">Registrar Ausencia</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="createAusenciaForm" asp-controller="Ausencias" asp-action="Create" method="post">
                <div class="modal-body">
                    <!-- Datos del empleado -->
                    <div class="mb-3">
                        <label for="Detalle" class="form-label"></label>
                        <textarea class="form-control" id="Detalle" name="Detalle" rows="3" required></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="FechaInicio" class="form-label">Inicio Ausencia</label>
                        <input type="date" class="form-control" id="FechaInicio" name="FechaInicio" required>
                    </div>
                    <div class="mb-3">
                        <label for="FechaFin" class="form-label">Fin Ausencia</label>
                        <input type="date" class="form-control" id="FechaFin" name="FechaFin" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>

