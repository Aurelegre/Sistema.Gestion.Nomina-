@using Sistema.Gestion.Nómina.DTOs.Puestos
@using Sistema.Gestion.Nómina.Helpers
@model PaginatedResult<GetPuestosResponse>

@{
    ViewData["Title"] = "Puestos";
}

<partial name="Messages" />


<div class="d-flex justify-content-between align-items-center">
    <h1 class="my-3">Puestos</h1>
    @if (PermissionHelper.HasPermission("Puesto.Crear"))
    {
       <button type="button" class="btn btn-primary" onclick="fetchCreatePuesto(0)">
        <i class="bi bi-plus-circle-fill" style="font-size: 20px"></i>&emsp;Crear Puesto
        </button> 
    }
    
</div>

<!-- Filtros de Búsqueda -->
<form method="get" asp-controller="Puesto" asp-action="Index" class="mb-4">
    <div class="row">
        <div class="col-md-4">
            <label for="Descripcion">Nombre</label>
            <input type="text" class="form-control" id="Descripcion" name="Descripcion" value="@ViewBag.Descripcion" placeholder="Filtrar por Nombre">
        </div>
        <div class="col-md-4">
            <label for="Jefe">Departamento</label>
            <input type="text" class="form-control" id="Departamento" name="Departamento" value="@ViewBag.Departamento" placeholder="Filtrar por Departamento">
        </div>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Buscar</button>
        <a method="get" asp-controller="Puesto" asp-action="Index" class="btn btn-secondary">Limpiar</a>
    </div>

</form>


@if (Model.Items.Any())
{
    <div class="table-responsive">
        <table class="table table-bordered table-striped" style="overflow : visible; position:relative">
            <thead class="thead-dark">
                <tr>
                    <td>No.</td>
                    <td>Nombre</td>
                    <td>Departamento</td>
                    <td>Acciones</td>
                </tr>
            </thead>
            <tbody>
                @{
                    int counter = 1; // Inicializa el contador
                }
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@counter</td> <!-- Muestra el número secuencial -->
                        <td>@item.Descripcion</td>
                        <td>@item.Departamento</td>
                        <td>
                            <select class="form-select form-select-sm actions-dropdown" id="selectId">
                                <option selected>Seleccionar</option>
                                @if (PermissionHelper.HasPermission("Puesto.Actualizar"))
                                {
                                    <option value="editar" data-id="@item.Id"> Editar</option>
                                }
                                @if (PermissionHelper.HasPermission("Puesto.Eliminar"))
                                {
                                    <option value="eliminar" data-id="@item.Id">Eliminar</option>
                                }
                                @if (PermissionHelper.HasPermission("Puesto.Ver"))
                                {
                                    <option value="detalle" data-id="@item.Id">Ver detalle</option>
                                }
                            </select>
                        </td>
                    </tr>

                    counter++; // Incrementa el contador

                }

            </tbody>
        </table>
    </div>

    <!-- Paginación -->
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", new GetPuestosDTO { page = i, Descripcion = ViewBag.Descripcion,Departamento = ViewBag.Departamento })">
                        @i
                    </a>
                </li>
            }
        </ul>
    </nav>

}
else
{
    <p>No hay Puestos disponibles.</p>
}

<partial name="Edit" />
<partial name="Create" />
<partial name="Delete" />
<partial name="Details" /> 


<script src="/js/Puestos.js" asp-append-version="true"></script>
