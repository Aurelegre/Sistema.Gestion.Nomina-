<!-- Modal para editar Puesto -->
<div class="modal fade" id="editPuestoModal" tabindex="-1" aria-labelledby="editPuestoModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editPuestoModalLabel">Editar Puesto</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-controller="Puesto" asp-action="Edit" method="post" id="editPuestoForm">
                    <input type="hidden" id="editId" name="id" />
                    <div class="mb-3 form-group">
                        <label for="editDescripcion" class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="editDescripcion" name="descripcion" required />
                    </div>
                    <div class="mb-3 form-group modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-primary">Guardar cambios</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
