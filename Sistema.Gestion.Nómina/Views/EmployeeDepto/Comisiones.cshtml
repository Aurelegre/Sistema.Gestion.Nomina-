<!-- Modal para crear un Horas Extras -->
<div class="modal fade" id="createComisionModal" tabindex="-1" aria-labelledby="createComisionModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <!-- Aumenté el tamaño del modal -->
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createComisionModalLabel">Registrar Comisiones</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="createHorasForm" asp-controller="EmployeeDepto" asp-action="Aumentos" method="post">
                <div class="modal-body">
                    <!-- Datos del Prestamo -->
                    <input id="employeeComiId" name="IdEmpleado" type="hidden" />
                    <div class="mb-3">
                        <label for="Total" class="form-label">Total vendido / producido</label>
                        <input type="number" class="form-control" id="IdHoras" name="Total" required min="0" step="0.01">
                    </div>
                    <div class="mb-3">
                        <label for="Horas" class="form-label">Tipo</label>
                        <select class="form-select" id="Horas" name="Tipo" required>
                            <option value="" selected disabled>Seleccione Tipo</option>
                            <option value=4>Ventas</option>
                            <option value=5>Producción</option>
                        </select>
                    </div>
                </div>
            
            <label id="idmessages" class="alert-warning bg-warning" hidden></label>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="submit" class="btn btn-primary">Registrar</button>
            </div>
            </form>
        </div>
    </div>
</div>
