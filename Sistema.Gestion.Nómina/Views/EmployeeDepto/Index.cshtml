@using Sistema.Gestion.Nómina.DTOs.EmployeeDepto
@using Sistema.Gestion.Nómina.Helpers

@model PaginatedResult<GetEmployeesDeptoResponse>

@{
    ViewData["Title"] = $"Empleados - {ViewBag.Departamento} ";
}

<partial name="Messages" />


<div class="d-flex justify-content-between align-items-center">
    <h1 class="my-3">Empleados : @ViewBag.Departamento</h1>
</div>

<!-- Filtros de Búsqueda -->
<!-- Filtros de Búsqueda -->
<form method="get" asp-controller="EmployeeDepto" asp-action="Index" class="mb-4">
    <div class="row">
        <div class="col-md-4">
            <label for="DPI">DPI</label>
            <input type="text" class="form-control" id="DPI" name="DPI" value="@ViewBag.DPI" placeholder="Filtrar por DPI">
        </div>
        <div class="col-md-4">
            <label for="Nombre">Nombre</label>
            <input type="text" class="form-control" id="Nombre" name="Nombre" value="@ViewBag.Nombre" placeholder="Filtrar por Nombre">
        </div>
        <div class="col-md-4">
            <label for="Puesto">Puesto</label>
            <input type="text" class="form-control" id="Puesto" name="Puesto" value="@ViewBag.Puesto" placeholder="Filtrar por Puesto">
        </div>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Buscar</button>
        <a method="get" asp-controller="EmployeeDepto" asp-action="Index" class="btn btn-secondary">Limpiar</a>
    </div>
</form>


@if (Model.Items.Any())
{
    <div class="table-responsive">
        <table class="table table-bordered table-striped" style="overflow : visible; position:relative">
            <thead class="thead-dark">
                <tr>
                    <td>No.</td>
                    <td>DPI</td>
                    <td>Nombre Completo</td>
                    <td>Puesto</td>
                    <td>Acciones</td>

                </tr>
            </thead>
            <tbody>
                @{
                    int counter = 1; // Inicializa el contador
                }
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@counter</td> <!-- Muestra el número secuencial -->
                        <td>@item.DPI</td>
                        <td>@item.Nombre</td>
                        <td>@item.Puesto</td>

                        <td>
                            <select class="form-select form-select-sm actions-dropdown">
                                <option selected>Seleccionar</option>
                                @if (PermissionHelper.HasPermission("Empleados.Ver"))
                                {
                                    <option value="detalle" data-id="@item.Id">Ver Detalle</option>
                                }
                                @if (PermissionHelper.HasPermission("Empleados.Actualizar"))
                                {
                                    <option value="extras" data-id="@item.Id">Horas Extras</option>

                                }
                                @if (PermissionHelper.HasPermission("Empleados.Eliminar"))
                                {
                                    <option value="comisiones" data-id="@item.Id">Comisiones</option>
                                }
                            </select>
                        </td>
                    </tr>

                    counter++; // Incrementa el contador

                }

            </tbody>
        </table>
    </div>

    <!-- Paginación -->
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", new GetEmployeesDeptoDTO { page = i, DPI = ViewBag.DPI, Nombre = ViewBag.Nombre, Puesto = ViewBag.Puesto })">
                        @i
                    </a>
                </li>
            }
        </ul>
    </nav>

}
else
{
    <p>No hay empleados disponibles.</p>
}

<partial name="Details" />
<partial name="HorasExtras" />
<partial name="Comisiones" />
<script src="/js/EmployeeDepto.js" asp-append-version="true"></script>
