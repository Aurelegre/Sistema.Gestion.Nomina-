<!-- Modal para crear un Horas Extras -->
<div class="modal fade" id="createHorasModal" tabindex="-1" aria-labelledby="createHorasModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <!-- Aumenté el tamaño del modal -->
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createHorasModalLabel">Registrar Horas Extras</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="createHorasForm" asp-controller="EmployeeDepto" asp-action="AumentoHoras" method="post">
                <div class="modal-body">
                    <!-- Datos del Prestamo -->
                    <input id="employeeHorasId" name="IdEmpleado" type="hidden" />
                    <div class="mb-3">
                        <label for="Total" class="form-label">Total de Horas Extras</label>
                        <input type="time" class="form-control" id="IdHoras" name="Tiempo" required>
                    </div>
                    <div class="mb-3">
                        <label for="Horas" class="form-label">Tipo</label>
                        <select class="form-select" id="Horas" name="Tipo" required >
                            <option value="" selected disabled>Seleccione Tipo</option>
                            <option value=1>Horas Extras</option>
                            <option value=2>Día Festivo</option>
                        </select>
                    </div>
                </div>
            </form>
            <label id="idmessages" class="alert-warning bg-warning" hidden></label>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="submit" class="btn btn-primary" onclick="validarTiempo('createHorasForm')">Registrar</button>
            </div>
            
        </div>
    </div>
</div>
