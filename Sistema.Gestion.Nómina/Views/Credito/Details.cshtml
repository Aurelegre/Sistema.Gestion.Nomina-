<!-- Modal para mostrar los detalles de credito -->
<div class="modal fade" id="creditoDetailModal" tabindex="-1" aria-labelledby="creditoDetailModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="creditoDetailModalLabel">Historial de Crédito</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="d-block justify-content-between align-items-center">
                    <div class=" justify-content-between align-items-center">
                        <p><strong>Cuotas Pendientes:</strong> <span id="idCuotas"></span></p>
                    </div>
                    <div class=" justify-content-between align-items-center">
                        <p><strong>Total Pendiente:</strong> <span id="idTotalP"></span></p>
                    </div>
                </div>

                <div class="table-responsive">
                    <table class="table table-bordered table-striped" style="overflow : visible; position:relative">
                        <thead class="thead-dark">
                            <tr>
                                <td>No.</td>
                                <td>Fecha de Pago</td>
                                <td>Pagado</td>
                                <td>Pendiente</td>
                            </tr>
                        </thead>
                        <tbody id="bodytable">
                        </tbody>
                    </table>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Salir</button>
            </div>
        </div>
    </div>
</div>