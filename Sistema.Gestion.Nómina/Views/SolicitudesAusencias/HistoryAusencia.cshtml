@using Sistema.Gestion.Nómina.DTOs.SolicitudesAusencia
@using Sistema.Gestion.Nómina.Helpers

@model PaginatedResult<HistorialSolicitudesResponse>

@{
    ViewData["Title"] = "Historial Solicitudes";
}

<partial name="Messages" />


<div class="d-block justify-content-between align-items-center">
    <div class="d-flex justify-content-between align-items-center">
        <h1 class="my-3">Historial de Solicitudes</h1>
        <a method="get" asp-controller="Ausencias" asp-action="Index" class="btn btn-primary" style="font-size: 20px"><i class="bi bi-box-arrow-in-left"></i></a>
    </div>

    <h3 class="my-4" style="margin-top:-40px">Departamento: <strong>@ViewBag.Depto</strong></h3>
</div>

<!-- Filtros de Búsqueda -->
<!-- Filtros de Búsqueda -->
<form method="get" asp-controller="SolicitudesAusencias" asp-action="HistoryAusencia" class="mb-4">
    <div class="row">
        <div class="col-md-3">
            <label for="Empleado">Empleado</label>
            <input type="text" class="form-control" id="Empleado" name="Empleado" value="@ViewBag.Empleado" placeholder="Filtrar por Empleado">
        </div>
        <div class="col-md-3">
            <label for="Estado">Fecha de Solicitud</label>
            @{
                var fechaPorDefecto = ViewBag.Fecha != null
                ? ((DateOnly)ViewBag.Fecha).ToString("yyyy-MM-dd")
                : ""; // Deja vacío si no hay fecha
            }

            <input type="date" class="form-control" id="Fecha" name="Fecha" value="@fechaPorDefecto" placeholder="Seleccione Fecha" />
        </div>
        <div class="col-md-3">
            <label for="Estado">Estado</label>
            <select value="@ViewBag.Estado" name="Estado" class="form-control" id="Estado">
                <option value="">Todos</option>
                <option value="Autorizada">Autorizado</option>
                <option value="Denegada">Denegados</option>
            </select>
        </div>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Buscar</button>
        <a method="get" asp-controller="SolicitudesAusencias" asp-action="HistoryAusencia" class="btn btn-secondary">Limpiar</a>
    </div>
</form>


@if (Model.Items.Any())
{
    <div class="table-responsive">
        <table class="table table-bordered table-striped" style="overflow : visible; position:relative">
            <thead class="thead-dark">
                <tr>
                    <td>No.</td>
                    <td>Verificador</td>
                    <td>Fecha</td>
                    <td>Descripción</td>
                    <td>Solicitante</td>
                </tr>
            </thead>
            <tbody>
                @{
                    int counter = 1; // Inicializa el contador
                }
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@counter</td> <!-- Muestra el número secuencial -->
                        <td>@item.NombreJefe</td>
                        <td>@item.Fecha</td>
                        @if (item.Descripcion.Contains("Autorizada"))
                        {
                            <td><label class="alert-success" style="padding:2px"><strong>@item.Descripcion</strong></label></td>
                        }
                        else  @if (item.Descripcion.Contains("Denegada"))
                        {
                            <td><label class="alert-danger" style="padding:2px"><strong>@item.Descripcion</strong></label></td>

                        }
                        <td>@item.NombreEmpleado</td>
                        

                        <td>
                            <select class="form-select form-select-sm actions-dropdown">
                                <option selected>Seleccionar</option>
                                @if (PermissionHelper.HasPermission("SolicitudesAusencias.Ver"))
                                {
                                    <option value="detalle" data-id="@item.IdAusencia" handleDetails="1">Ver Detalle</option>
                                }
                            </select>
                        </td>
                    </tr>

                    counter++; // Incrementa el contador

                }

            </tbody>
        </table>
    </div>

    <!-- Paginación -->
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" href="@Url.Action("HistoryAusencia", new HistorialSolicitudesDTO { page = i, Empleado = ViewBag.Empleado, Fecha = ViewBag.Fecha, Estado= ViewBag.Estado })">
                        @i
                    </a>
                </li>
            }
        </ul>
    </nav>

}
else
{
    <p>No hay Solicitudes registradas.</p>
}

<partial name="Details" />
<script src="/js/SolicitudAusencia.js" asp-append-version="true"></script>
