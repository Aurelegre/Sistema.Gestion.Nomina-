@using Sistema.Gestion.Nómina.DTOs.Empleados
@model PaginatedResult<GETEmpleadosDTO>

@{
    ViewData["Title"] = "Empleados";
}
@if (TempData["Message"] != null)
{
    <div class="alert alert-success mt-5" role="alert" id="message">
        <div>
            <strong>@TempData["Message"]</strong>
        </div>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger mt-5" role="alert" id="message">
        <div>
            <strong>@TempData["Error"]</strong>
        </div>
    </div>
}

<div class="d-flex justify-content-between align-items-center">
    <h1 class="my-3">Empleados</h1>
    <button type="button" class="btn btn-primary" onclick="fetchEmployeeData(0)">
        Crear Empleado
    </button>
</div>

@if (Model.Items.Any())
{
    <div class="table-responsive">
        <table class="table table-bordered table-striped" style="overflow : visible; position:relative">
            <thead class="thead-dark">
                <tr>
                    <td>No.</td>
                    <td>DPI</td>
                    <td>Nombre Completo</td>
                    <td>Puesto</td>
                    <td>Departamento</td>
                    <td>Acciones</td>
                </tr>
            </thead>
            <tbody>
               @{
                    int counter = 1; // Inicializa el contador
                }
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@counter</td> <!-- Muestra el número secuencial -->
                        <td>@item.DPI</td>
                        <td>@item.Nombre</td>
                        <td>@item.Puesto</td>
                        <td>@item.Departamento</td>
                        <td>
                            <select class="form-select form-select-sm actions-dropdown">
                                <option selected>Seleccionar</option>
                                <option value="editar" data-id="@item.Id"> Editar</option>
                                <option value="eliminar" data-id="@item.Id">Eliminar</option>
                                <option value="detalle" data-id="@item.Id">Ver Detalle</option>
                            </select>
                        </td>
                    </tr>

                    counter++; // Incrementa el contador

                }

            </tbody>
        </table>
    </div>

    <!-- Paginación -->
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a>
                </li>
            }
        </ul>
    </nav>
}
else
{
    <p>No hay empleados disponibles.</p>
}

<partial name="Create" />
<partial name="Update" />
<partial name="Details"/>
<partial name="Delete" />



<script src="/js/Employees.js" asp-append-version="true"></script>
